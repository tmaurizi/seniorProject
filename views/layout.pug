doctype html

html
	link(rel='stylesheet', href='/style.css')
	head
		title Yahtzee!
	body
		if !hide_login
			if user
				span
					span Welcome back #{user.username}!							
					button(onclick='logout()') Logout
			else
				button(onclick='login()') Login
		button.right(id='instruction', onclick="popup('instructionPopup')") Instructions
		div.popup(id='instructionPopup')
			.popup-content.bordered
				h1 Instructions
				p Roll the dice!
				button(id='closeInstruction', onclick="closePopup('instructionPopup')") Close
		script(src='gameFunctions.js')
		script(src='navigation.js')
		block content
