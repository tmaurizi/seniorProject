extends layout.pug

//- Page for players to log in to their accounts

block content
	h1 Login
	form(action = '/login', method = 'post')
		input(type = 'email', placeholder = 'Email Address', name = 'email')
		br
		input(type = 'password', name = 'password')
		br
		button(type = 'submit') Login
		if message
			p #{message}

	p
		a.button(href = '/signup') Don't have an account? Sign up!
	p
		a.button(href = '/') Play as guest